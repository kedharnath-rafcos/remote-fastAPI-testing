# ================================
# Application Configuration
# ================================
APP_NAME=EduSportsConnect API
APP_VERSION=1.0.0
DEBUG=True

# ================================
# Database Configuration
# ================================
# PostgreSQL connection URL format:
# postgresql+asyncpg://username:password@host:port/database_name
#
# IMPORTANT: 
# - Replace username, password, host, port, and database_name with your actual values
# - If password contains special characters, URL-encode them:
#   @ becomes %40
#   # becomes %23
#   $ becomes %24
#   & becomes %26
#   + becomes %2B
#   / becomes %2F
#   = becomes %3D
#   ? becomes %3F
#
# Example: If password is "Admin@123", use "Admin%40123" in the URL
#
DATABASE_URL=postgresql+asyncpg://postgres:your_password_here@localhost:5432/your_database_name

# Database Connection Pool Settings
DATABASE_ECHO=True
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_PRE_PING=True
DATABASE_POOL_RECYCLE=3600
DB_INIT_ON_STARTUP=True
DB_REQUIRED_ON_STARTUP=True

# ================================
# CORS Settings
# ================================
# Comma-separated list of allowed origins for CORS
# Add your frontend URLs here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# ================================
# Security Settings
# ================================
# IMPORTANT: Generate a secure random secret key for production!
# You can generate one using: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# AWS S3 Configuration
# ================================
# AWS credentials for S3 image storage
# Get these from AWS IAM Console: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# S3 Bucket settings
AWS_REGION=eu-north-1
AWS_S3_BUCKET_NAME=sports-images-test

# File upload settings
AWS_S3_MAX_FILE_SIZE=10485760  # 10MB in bytes
AWS_S3_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# ================================
# Setup Instructions
# ================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Update DATABASE_URL with your PostgreSQL credentials
# 3. Change SECRET_KEY to a secure random value
# 4. Adjust other settings as needed for your environment
# 5. Never commit .env file to version control!
