# Staging environment
ENVIRONMENT=staging
APP_NAME=EduSportsConnect API
APP_VERSION=1.0.0
DEBUG=False

DATABASE_URL=postgresql+asyncpg://postgres:your_password_here@staging-db-host:5432/your_database_name
DATABASE_ECHO=False
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_PRE_PING=True
DATABASE_POOL_RECYCLE=3600
DB_INIT_ON_STARTUP=True
DB_REQUIRED_ON_STARTUP=True

ALLOWED_ORIGINS=https://staging.example.com

SECRET_KEY=replace-with-strong-staging-secret
ACCESS_TOKEN_EXPIRE_MINUTES=30

AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=eu-north-1
AWS_S3_BUCKET_NAME=sports-images-test-staging
AWS_S3_MAX_FILE_SIZE=10485760
AWS_S3_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
